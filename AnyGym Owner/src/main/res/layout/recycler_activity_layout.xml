<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activityLinear"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/monthActivityTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="JAN"
        android:textColor="@color/black"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/dateActivityTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="28"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="26dp"/>
    <TextView
        android:id="@+id/dayActivityTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="MON"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleActivityTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/timeActivityTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8:00:00 AM"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/creditsActivityTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>